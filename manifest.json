{
	"name": "Tab manager",
	"version": "0.1.0",
	"description": "Easily and quickly navigate through your chrome tabs",
	"short_name": "Chrome tab manager",
	"manifest_version": 2,
	"permissions": [
		"activeTab",
		"declarativeContent",
		"background",
		"storage"
	],

	"background": {
		"scripts": ["./extension/background.js"],
		"persisted": false
	},

	"browser_action": {
		"default_title": "Tab manager",
		"default_popup": "./extension/popup.html"
	}
}
