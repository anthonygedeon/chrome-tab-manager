{
	"name": "Partizion",
	"version": "0.1.0",
	"description": "Organize, find, and manage your work in the browser.",
	"short_name": "Partizion",
	"manifest_version": 2,
	"permissions": ["activeTab", "tabs"],

	"background": {
		"scripts": ["./extension/background.js"]
	},

	"icons" : {
		"32": "./extension/icons/32-circle-favicon.png",
		"16": "./extension/icons/16-circle-favicon.png",
		"48": "./extension/icons/48-favicon.png"
	},

	"commands": {
		"open_partizion_search": {
			"suggested_key": {
				"default": "Ctrl+Shift+S",
				"mac": "MacCtrl+Shift+S"
			},
			"description": "Open Partizion search"
		}
	}
}
